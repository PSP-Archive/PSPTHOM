TARGET = pspthom
PSPSDK = $(shell psp-config --pspsdk-path)
PSPBIN = $(shell psp-config --psp-prefix)/bin
SDL_CONFIG = $(PSPBIN)/sdl-config
OBJS = \
disk.o \
errors.o \
hardware.o \
k7.o \
keyboard.o \
mouse.o \
psp_danzeff.o \
psp_fmgr.o \
psp_run.o \
psp_font.o \
psp_battery.o \
psp_kbd.o \
psp_main.o \
psp_menu.o \
psp_menu_kbd.o \
psp_menu_set.o \
psp_menu_help.o \
psp_menu_cheat.o \
psp_menu_list.o \
psp_editor.o \
psp_irkeyb.o \
psp_sdl.o \
psp_gu.o \
to7.o \
udisplay.o \
ugraphic.o \
main.o \
usound.o \
global.o \
mc68xx/dasm6809.o \
mc68xx/mc6809.o \
mc68xx/mc6821.o \
mc68xx/mc6846.o


DEFAULT_CFLAGS = $(shell $(SDL_CONFIG) --cflags)

PSP_FW_VERSION=500
PSPTHOM_VERSION=1.2.1-5x

MORE_CFLAGS = \
 -funroll-loops -ffast-math -fomit-frame-pointer \
 -fno-strength-reduce -finline-functions \
 -fsingle-precision-constant \
 -DPSPFW30X \
 -DUSE_PSP_IRKEYB \
 -DPSPTHOM_VERSION=\"$(PSPTHOM_VERSION)\" \
 -DNO_STDIO_REDIRECT

# -DMITSHM 
OPTIM_CFLAGS= -O2

CFLAGS = $(DEFAULT_CFLAGS) $(MORE_CFLAGS)
CXXFLAGS = $(DEFAULT_CFLAGS) $(MORE_CFLAGS) -fno-exceptions -fno-rtti

LIBS += -lpspirkeyb -lpsppower -lSDL_image -lSDL -lpng -ljpeg -lpspaudio -lpspgu -lpsphprm -lz -lm

BUILD_PRX=1

EXTRA_TARGETS = EBOOT.PBP
PSP_EBOOT_TITLE = PSPTHOM-v$(PSPTHOM_VERSION)
PSP_EBOOT_ICON= pspthom.png
PSP_EBOOT_SND0= pspthom.at3
PSP_EBOOT_PIC1= pspthom-pic.png

include $(PSPSDK)/lib/build.mak

all: EBOOT.PBP

.c.o:
	$(CC) $(CFLAGS) $(OPTIM_CFLAGS) -c -o $@ $<

psp_gu.o : psp_gu.c
	$(CC) -c $< $(CFLAGS) -O0 -o $@

install: all
	@mkdir -p /media/disk/psp/game5XX/pspthom/
	cp EBOOT.PBP /media/disk/psp/game5XX/pspthom/


realclean:
	/bin/rm -f $(OBJS) EBOOT.PBP PARAM.SFO

ctags :
	ctags -R 
